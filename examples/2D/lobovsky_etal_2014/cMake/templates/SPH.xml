<sphInput>
    <Variables>
        <Variable name="g" type="vec" value="0.0, -{{G}}" />
        <Variable name="dr" type="float" value="{{DR}}" />
        <Variable name="hfac" type="float" value="{{HFAC}}" />
        <Variable name="h" type="float" value="hfac * dr" />
        <Variable name="L" type="float" length="1" value="{{L}}"/>
        <Variable name="D" type="float" length="1" value="{{D}}"/>
        <Variable name="B" type="float" length="1" value="{{B}}"/>
        <Variable name="H" type="float" length="1" value="{{H}}"/>
        <Variable name="cs" type="float" value="{{CS}}" />
        <Variable name="courant" type="float" value="{{COURANT}}" />
        <Variable name="iter_midpoint_max" type="unsigned int" length="1" value="200"/>
        <Variable name="relax_midpoint" type="float" length="1" value="1. - 1. / iter_midpoint_max"/>
        <Variable name="Residual_midpoint_max" type="float" length="1" value="1.e-6 * {{E0}}" symbol="E_{\Delta t}^{max}"/>
    </Variables>
</sphInput>
