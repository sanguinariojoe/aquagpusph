        <Tool action="insert" before="bottom_cfd symmetry init*" type="set_scalar" name="bottom_symmetry_r" in="symmetry_r" value="0.0, -0.5, 0.0, 0.0"/>
        <Tool action="insert" before="bottom_cfd symmetry init*" type="set_scalar" name="bottom_symmetry_n" in="symmetry_n" value="0.0, -1.0, 0.0, 0.0"/>

        <Tool action="insert" before="top_cfd symmetry init*" type="set_scalar" name="top_symmetry_r" in="symmetry_r" value="0.0, 0.5, 0.0, 0.0"/>
