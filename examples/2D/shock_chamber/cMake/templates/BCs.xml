<sphInput>
    <Include file="@RESOURCES_DIR@/Presets/cfd/variable_h/symmetry.xml" prefix="left_"/>
    <Include file="@RESOURCES_DIR@/Presets/cfd/variable_h/symmetry.xml" prefix="bottom_"/>
    <Include file="@RESOURCES_DIR@/Presets/cfd/variable_h/symmetry.xml" prefix="bottomleft_"/>

    <Variables>
        <Variable name="symmetry_r" type="vec" value="0.0, 0.0" />
    </Variables>

    <Tools>
        <Tool action="insert" before="left_cfd symmetry_pre mirror" type="set_scalar" name="left_symmetry_n" in="symmetry_n" value="-1.0, 0.0"/>
        <Tool action="insert" before="left_cfd symmetry mirror" type="set_scalar" name="left_symmetry_n" in="symmetry_n" value="-1.0, 0.0"/>
        <Tool action="insert" before="bottom_cfd symmetry_pre mirror" type="set_scalar" name="bottom_symmetry_n" in="symmetry_n" value="0.0, -1.0"/>
        <Tool action="insert" before="bottom_cfd symmetry mirror" type="set_scalar" name="bottom_symmetry_n" in="symmetry_n" value="0.0, -1.0"/>
        <Tool action="insert" before="bottomleft_cfd symmetry_pre mirror" type="set_scalar" name="bottomleft_symmetry_n" in="symmetry_n" value="-1.0 / sqrt(2.0), -1.0 / sqrt(2.0)"/>
        <Tool action="insert" before="bottomleft_cfd symmetry mirror" type="set_scalar" name="bottomleft_symmetry_n" in="symmetry_n" value="-1.0 / sqrt(2.0), -1.0 / sqrt(2.0)"/>
    </Tools>
</sphInput>
