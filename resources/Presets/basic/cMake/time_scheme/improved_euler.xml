<?xml version="1.0" ?>

<!-- This preset replaces the time integration scheme by a quasi-second order
    Improved Euler/Heun one.

    To use this module, just simply include it any time after basic.xml
    This is the time integration scheme used by default
-->

<sphInput>
    <Definitions>
        <Define name="TSCHEME" value="TSCHEME_IMPROVED_EULER" evaluate="false"/>
    </Definitions>

    <Tools>
        <Tool action="replace" name="predictor" type="kernel" entry_point="predictor" path="@RESOURCES_OUTPUT_DIR@/Scripts/basic/time_scheme/improved_euler.cl"/>
        <Tool action="replace" name="corrector" type="kernel" entry_point="corrector" path="@RESOURCES_OUTPUT_DIR@/Scripts/basic/time_scheme/improved_euler.cl"/>
    </Tools>
</sphInput>
