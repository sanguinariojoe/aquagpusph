<?xml version="1.0" ?>

<!-- BI.xml
Allows the usage of boundary integrals to enforce a solid boundary condition.

Remarks:
  - This file should be included once.
  - For the boundary integrals, it is intended that the boundary elements have
    the flag imove = -3, and a unit normal. Also the area of the elements should
    be stored in the mass array "m".
  - Boundary integrals have significant advantages when complex geometries
    are considered in the problem.
  - The boundary integrals require renormalizing the differential operators
    computed, having undesired effects in the momentum, mass and energy
    conservation.
  - By default, free-slip boundary condition is considered. To enforce the
    no-slip boundary condition include the preset BINoSlip.xml
-->

<sphInput>
    <Definitions>
        <Define name="__CFD_BI__"/>
    </Definitions>

    <Tools>
        <Tool name="cfd BI lap_u" action="insert" before="Interactions" type="kernel" entry_point="freeslip" path="@RESOURCES_OUTPUT_DIR@/Scripts/cfd/Boundary/BI/LapU.cl"/>
        <Tool name="cfd BI grad_p" action="insert" before="Interactions" type="kernel" entry_point="freeslip" path="@RESOURCES_OUTPUT_DIR@/Scripts/cfd/Boundary/BI/GradP.cl"/>
        <Tool name="cfd BI interpolation" action="insert" before="Interactions" type="kernel" path="@RESOURCES_OUTPUT_DIR@/Scripts/cfd/Boundary/BI/Interpolation.cl"/>
        <Tool name="cfd BI interpolation Shepard" action="insert" before="Interactions" type="kernel" path="@RESOURCES_OUTPUT_DIR@/Scripts/cfd/Boundary/BI/InterpolationShepard.cl"/>
        <Tool name="cfd BI interactions" action="insert" before="Interactions" type="kernel" path="@RESOURCES_OUTPUT_DIR@/Scripts/cfd/Boundary/BI/Interactions.cl"/>
        <Tool name="cfd BI Shepard" action="insert" before="Interactions" type="kernel" entry_point="apply" path="@RESOURCES_OUTPUT_DIR@/Scripts/cfd/Boundary/BI/Shepard.cl"/>
        <!-- Replace the way Shepard factor is computed -->
        <Tool name="cfd Shepard" action="replace" type="kernel" entry_point="compute" path="@RESOURCES_OUTPUT_DIR@/Scripts/cfd/Boundary/BI/Shepard.cl"/>
    </Tools>
</sphInput>
