<?xml version="1.0" ?>

<!-- This preset replaces the time integration scheme by a quasi-second order
    Improved Euler/Heun one.

    To use this module, just simply include it any time after cfd/ideal_gas.xml
    and basic/time_scheme/euler.xml
-->

<sphInput>
    <Tools>
        <Tool action="replace" name="predictor ideal gas" type="kernel" entry_point="predictor" path="@RESOURCES_OUTPUT_DIR@/Scripts/cfd/ideal_gas/time_scheme/improved_euler.cl"/>
        <Tool action="replace" name="corrector ideal gas" type="kernel" entry_point="corrector" path="@RESOURCES_OUTPUT_DIR@/Scripts/cfd/ideal_gas/time_scheme/improved_euler.cl"/>
    </Tools>
</sphInput>
