<?xml version="1.0" ?>

<!-- ideal_gas.xml
Replace the stiffened EOS by an ideal gas EOS with isotentropic expansion
-->

<sphInput>
    <Variables>
        <Variable name="gamma" type="float*" length="n_sets" />
        <Variable name="cv" type="float*" length="n_sets" />
        <Variable name="eint" type="float*" length="N" />
        <Variable name="T" type="float*" length="N" />
        <Variable name="deintdt" type="float*" length="N" />
        <Variable name="eint_in" type="float*" length="N" />
        <Variable name="deintdt_in" type="float*" length="N" />
    </Variables>

    <Tools>
        <Tool action="insert" after="predictor" name="predictor ideal gas" type="kernel" entry_point="predictor" path="@RESOURCES_OUTPUT_DIR@/Scripts/cfd/ideal_gas/euler.cl"/>

        <Tool action="insert" after="sort stage1,sort stage2" name="sort ideal gas" type="kernel" entry_point="entry" path="@RESOURCES_OUTPUT_DIR@/Scripts/cfd/ideal_gas/Sort.cl"/>
        <Tool action="replace" name="EOS" type="kernel" path="@RESOURCES_OUTPUT_DIR@/Scripts/cfd/ideal_gas/EOS.cl"/>

        <Tool action="insert" before="Rates" type="kernel" name="cfd rates ideal gas" path="@RESOURCES_OUTPUT_DIR@/Scripts/cfd/ideal_gas/Rates_Riemann.cl"/>
        
        <Tool action="insert" after="corrector" name="corrector ideal gas" type="kernel" entry_point="corrector" path="@RESOURCES_OUTPUT_DIR@/Scripts/cfd/ideal_gas/euler.cl"/>
    </Tools>
</sphInput>
