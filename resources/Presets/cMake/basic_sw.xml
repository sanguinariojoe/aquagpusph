<?xml version="1.0" ?>

<!-- basic_sw.xml
An extension to basic to include internal energy for Equations Of State
-->

<sphInput>
    <Variables>
        <Variable name="eint" type="float*" length="N" />
        <Variable name="deintdt" type="float*" length="N" />
        <Variable name="eint_in" type="float*" length="N" />
        <Variable name="deintdt_in" type="float*" length="N" />
    </Variables>

    <Tools>
        <Tool action="insert" after="predictor" name="predictor_sw" type="kernel" entry_point="predictor" path="@RESOURCES_OUTPUT_DIR@/Scripts/basic/time_scheme/euler_sw.cl"/>

        <Tool action="insert" after="sort stage1,sort stage2" name="sort sw" type="kernel" entry_point="entry" path="@RESOURCES_OUTPUT_DIR@/Scripts/basic/Sort_sw.cl"/>
        <Tool action="replace" name="EOS" type="kernel" path="@RESOURCES_OUTPUT_DIR@/Scripts/basic/EOS_sw.cl"/>

        <Tool action="insert" after="corrector" name="corrector_sw" type="kernel" entry_point="corrector" path="@RESOURCES_OUTPUT_DIR@/Scripts/basic/time_scheme/euler_sw.cl"/>
    </Tools>
</sphInput>
