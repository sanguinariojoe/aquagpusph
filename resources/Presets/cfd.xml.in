<?xml version="1.0" ?>
<sphInput>
    <Variables>
        <!-- Some variables are automatically defined:
        | NAME        | TYPE          | LEN     | DESCRIPTION
        | t           | float         | 1       | Simulation time
        | dt          | float         | 1       | Time step
        | step        | unsigned int  | 1       | Step
        | n           | unsigned int  | 1       | Number of particles
        | n_sensors   | unsigned int  | 1       | Number of sensors
        | N           | unsigned int  | 1       | n + n_sensors
        | n_sets      | unsigned int  | 1       | Number of particles sets
        | n_radix     | unsigned int  | 1       | Rounded up value from N which is a power of 2
        | n_cells     | uivec4        | 1       | Number of cells at each direction, and the total one
        | support     | float         | 1       | Kernel support (as a factor of the kernel length h)
        | id          | unsigned int* | N       | ID of each particle
        | pos         | vec*          | N       | Positions
        | iset        | unsigned int* | N       | Particle set of each particle
        | id_sorted   | unsigned int* | n_radix | Permutations from unsorted space to sorted space
        | id_unsorted | unsigned int* | n_radix | Permutations from sorted space to unsorted space
        | icell       | unsigned int* | n_radix | Cell where each particle is located
        | ihoc        | unsigned int* | n_cells | First particle in each cell
         -->
        <Variable name="g" type="vec" value="0.0, 0.0, 0.0, 0.0" save="false" />
        <Variable name="cs" type="float" value="15.0" save="false" />
        <Variable name="courant" type="float" value="0.25" save="false" />
        <Variable name="rho_min" type="float" value="0.0" save="false" />
        <Variable name="rho_max" type="float" value="2.25*10^10" save="false" />
        <Variable name="pos_min" type="vec" save="false" />
        <Variable name="pos_max" type="vec" save="false" />

        <Variable name="gamma" type="float*" length="n_sets" save="false" />
        <Variable name="refd" type="float*" length="n_sets" save="false" />
        <Variable name="visc_dyn" type="float*" length="n_sets" save="false" />
        <Variable name="delta" type="float*" length="n_sets" save="false" />

        <!-- imove = 1 for fluid particles
             imove = 0 for sensors
             imove = -1 for fixed particles
             imove = -2 for elastic bounce boundary elements
             imove = -3 for boundary integrals boundary elements
         -->
        <Variable name="imove" type="int*" length="N" save="true" />
        <Variable name="normal" type="vec*" length="N" save="true" />
        <Variable name="v" type="vec*" length="N" save="true" />
        <Variable name="dvdt" type="vec*" length="N" save="true" />
        <Variable name="rho" type="float*" length="N" save="true" />
        <Variable name="drhodt" type="float*" length="N" save="true" />
        <Variable name="m" type="float*" length="N" save="true" />
        <Variable name="p" type="float*" length="N" save="true" />

        <Variable name="id_in" type="unsigned int*" length="N" save="true" />
        <Variable name="iset_in" type="unsigned int*" length="N" save="true" />
        <Variable name="imove_in" type="int*" length="N" save="true" />
        <Variable name="pos_in" type="vec*" length="N" save="true" />
        <Variable name="normal_in" type="vec*" length="N" save="true" />
        <Variable name="v_in" type="vec*" length="N" save="true" />
        <Variable name="dvdt_in" type="vec*" length="N" save="true" />
        <Variable name="rho_in" type="float*" length="N" save="true" />
        <Variable name="drhodt_in" type="float*" length="N" save="true" />
        <Variable name="m_in" type="float*" length="N" save="true" />
        <Variable name="p_in" type="float*" length="N" save="true" />

        <Variable name="grad_p" type="vec*" length="N" save="true" />
        <Variable name="lap_u" type="vec*" length="N" save="true" />
        <Variable name="div_u" type="float*" length="N" save="true" />
        <Variable name="lap_p" type="float*" length="N" save="true" />
        <Variable name="shepard" type="float*" length="N" save="true" />

        <Variable name="dt_var" type="float*" length="N" save="true" />
    </Variables>

    <Tools>
        <!-- Leap-Frog time integration predictor stage -->
        <Tool action="add" type="kernel" name="Predictor" path="@RESOURCES_OUTPUT_DIR@/OpenCL/Predictor.cl"/>

        <!-- Link-list and particles sorting -->
        <Tool action="add" type="link-list" name="Link-List"/>

        <Tool action="add" type="copy" name="Backup id" in="id" out="id_in"/>
        <Tool action="add" type="copy" name="Backup imove" in="imove" out="imove_in"/>
        <Tool action="add" type="copy" name="Backup iset" in="iset" out="iset_in"/>
        <Tool action="add" type="copy" name="Backup normal" in="normal" out="normal_in"/>
        <Tool action="add" type="copy" name="Backup m" in="m" out="m_in"/>
        <Tool action="add" type="kernel" name="Sort" path="@RESOURCES_OUTPUT_DIR@/OpenCL/Sort.cl"/>
        <Tool action="add" type="copy" name="Backup dvdt" in="dvdt" out="dvdt_in"/>
        <Tool action="add" type="copy" name="Backup drhodt" in="drhodt" out="drhodt_in"/>

        <!-- Particles interactions -->
        <Tool action="add" type="set" name="Reinit dvdt" in="dvdt" value="VEC_ZERO"/>
        <Tool action="add" type="set" name="Reinit drhodt" in="drhodt" value="0.f"/>
        <Tool action="add" type="set" name="Reinit shepard" in="shepard" value="0.f"/>

        <Tool action="add" type="kernel" name="Interactions" path="@RESOURCES_OUTPUT_DIR@/OpenCL/Interactions.cl"/>
        <Tool action="add" type="kernel" name="NonFluisSet" path="@RESOURCES_OUTPUT_DIR@/OpenCL/NonFluidSet.cl"/>
        <Tool action="add" type="kernel" name="BoundaryIntegrals" path="@RESOURCES_OUTPUT_DIR@/OpenCL/Boundary/BoundaryIntegrals.cl"/>

        <!-- Velocity and density variation rates computation -->
        <Tool action="add" type="kernel" name="Rates" path="@RESOURCES_OUTPUT_DIR@/OpenCL/Rates.cl"/>

        <!-- Leap-Frog time integration corrector stage -->
        <Tool action="add" type="kernel" name="Corrector" path="@RESOURCES_OUTPUT_DIR@/OpenCL/Corrector.cl"/>

        <!-- Time step computation -->
        <Tool action="add" type="set_scalar" name="Fixed time step" in="dt" value="courant * h / cs"/>
        <Tool action="add" type="kernel" name="Variable time step" path="@RESOURCES_OUTPUT_DIR@/OpenCL/TimeStep.cl"/>
        <Tool action="add" type="reduction" name="Minimum time step" in="dt_var" out="dt" null="INFINITY">
            a = (a &lt; b) ? a : b;
        </Tool>
        <Tool action="add" type="set_scalar" name="next time step" in="t" value="t + dt"/>
    </Tools>
</sphInput>
