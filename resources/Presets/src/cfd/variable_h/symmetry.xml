<?xml version="1.0" ?>

<!-- symmetry.xml
Infinite symmetry plane.
This preset is designed to be loaded after cfd.xml.

To use it, just include this file, and later set the values for the variables:
symmetry_r = Position of the symmetry plane
symmetry_n = Normal of the symmetry plane (It should be normalized)

In order to add several symmetry planes, just include this file setting a
prefix, for instance:
<Include file="symmetry.xml" prefix="left_"/>
<Include file="symmetry.xml" prefix="right_"/>
<Tools>
    <Tool action="insert" before="left_cfd symmetry* mirror" type="set_scalar" name="left_symmetry_r" in="symmetry_r" value="-1.0, 0.0, 0.0, 0.0"/>
    <Tool action="insert" before="left_cfd symmetry* mirror" type="set_scalar" name="left_symmetry_n" in="symmetry_n" value="-1.0, 0.0, 0.0, 0.0"/>
    <Tool action="insert" before="right_cfd symmetry* mirror" type="set_scalar" name="right_symmetry_r" in="symmetry_r" value="1.0, 0.0, 0.0, 0.0"/>
    <Tool action="insert" before="right_cfd symmetry* mirror" type="set_scalar" name="right_symmetry_n" in="symmetry_n" value="1.0, 0.0, 0.0, 0.0"/>
</Tools>
-->

<sphInput>
    <Variables>
        <!-- position and normal of the symmetry plane -->
        <Variable name="symmetry_r" type="vec" value="0.0, 0.0, 0.0, 0.0" />
        <Variable name="symmetry_n" type="vec" value="1.0, 0.0, 0.0, 0.0" />
        <!-- flag to identify the particles to be symmetrized -->
        <Variable name="imirrored" type="int*" length="N" />
        <!-- Symmetrized properties of the particles -->
        <Variable name="rmirrored" type="vec*" length="N" />
        <Variable name="umirrored" type="vec*" length="N" />
        <Variable name="nmirrored" type="vec*" length="N" />
        <Variable name="lap_p_corr_mirrored" type="vec*" length="N" />
    </Variables>

    <Tools>
        <!-- 1st stage: MLS computation
             ==========================
        -->
        <!-- We must start mirroring particles (and marking them). -->
        <Tool name="cfd symmetry_mls mirror" action="try_insert" before="imove1_MLS" type="kernel" path="../../../Scripts/cfd/Boundary/Symmetry/Mirror.cl"/>
        <!-- Now we can compute the interactions -->
        <Tool name="cfd symmetry_mls MLS" action="try_insert" before="imove1_MLS" type="kernel" path="../../../Scripts/cfd/Boundary/Symmetry/MLS.cl"/>

        <!-- 2nd stage: Omega computation
             ============================
        -->
        <!-- We must start mirroring particles (and marking them). -->
        <Tool name="cfd symmetry_omega mirror" action="insert" before="Omega" type="kernel" path="../../../Scripts/cfd/Boundary/Symmetry/Mirror.cl"/>
        <!-- Now we can compute the interactions -->
        <Tool name="cfd symmetry_omega Omega" action="insert" before="Omega" type="kernel" path="../../../Scripts/cfd/variable_h/Boundary/Symmetry/Omega.cl"/>

        <!-- 3rd stage: Particle interactions
             ================================
        -->
        <!-- We must start mirroring particles (and marking them). -->
        <Tool name="cfd symmetry mirror" action="insert" before="Interactions" type="kernel" path="../../../Scripts/cfd/Boundary/Symmetry/Mirror.cl"/>
        <!-- Now we can compute the interactions -->
        <Tool name="cfd symmetry interactions" action="insert" before="Interactions" type="kernel" path="../../../Scripts/cfd/variable_h/Boundary/Symmetry/Interactions.cl"/>
        <Tool name="cfd symmetry delta-SPH" ifdef="__DELTA_SPH__" action="insert" before="Interactions" type="kernel" entry_point="lapp" path="../../../Scripts/cfd/variable_h/Boundary/Symmetry/deltaSPH.cl"/>
        <Tool name="cfd symmetry delta-SPH full" ifdef="__DELTA_SPH_FULL__" action="insert" before="Interactions" type="kernel" entry_point="full" path="../../../Scripts/cfd/Boundary/Symmetry/deltaSPH.cl"/>

        <!-- 4th stage: delta-SPH correction
             ===============================
        -->
        <!-- We must start mirroring particles (and marking them). -->
        <Tool name="cfd symmetry_deltaSPH mirror" action="try_insert" before="LapP Correction" type="kernel" path="../../../Scripts/cfd/Boundary/Symmetry/Mirror.cl"/>
        <Tool name="cfd symmetry_deltaSPH mirror lapp_corr" action="try_insert" before="LapP Correction" type="kernel" entry_point="mirror" path="../../../Scripts/cfd/Boundary/Symmetry/deltaSPH.cl"/>
        <!-- Now we can compute the interactions -->
        <Tool name="cfd symmetry_deltaSPH lapp_corr" action="try_insert" before="LapP Correction" type="kernel" entry_point="lapp_corr" path="../../../Scripts/cfd/Boundary/Symmetry/deltaSPH.cl"/>

        <!-- 5th stage: Particle teleporting
             ===============================
        -->
        <!-- Finally we should deflect the particles tresspassing the plane. -->
        <Tool name="cfd symmetry_teleport mirror" action="insert" before="Corrector" type="kernel" entry_point="teleport" path="../../../Scripts/cfd/Boundary/Symmetry/Mirror.cl"/>
    </Tools>
</sphInput>
