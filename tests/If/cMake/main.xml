<?xml version="1.0" ?>
<sphInput>
    <Variables>
        <Variable length="N" name="r" symbol="r" type="vec*" />
        <Variable length="1" name="h" symbol="h" type="float" value="1.0"/>
    </Variables>
    <ParticlesSet n="500">
        <Load fields="r" file="particles.dat" format="FastASCII"/>
        <Save fields="r" file="set0" format="ASCII"/>
    </ParticlesSet>
    <Tools>
        <Tool action="add" name="swap float" type="set_scalar" in="h" value="-h"/>
        <Tool action="add" name="Bad if" type="if" condition="iter &gt;= 1"/>
        <Tool action="add" name="Bad assertion" type="assert" condition="h &gt; 0.0"/>
        <Tool action="add" name="End Bad if" type="end"/>
        <Tool action="add" name="iter += 1" type="set_scalar" in="iter" value="iter + 1"/>
        <Tool action="add" name="Good if" type="if" condition="iter &gt;= 1"/>
        <Tool action="add" name="Good assertion" type="assert" condition="h &lt; 0.0"/>
        <Tool action="add" name="End Good if" type="end"/>
        <Tool action="add" name="performance" type="report_performance" color="white" bold="false" path="performance.json"/>
    </Tools>
    <Settings>
        <Device device="0" platform="0" type="ALL"/>
        <RootPath path="@RESOURCES_DIR@/.."/>
    </Settings>
    <Timing>
        <Option name="End" type="Steps" value="1"/>
    </Timing>
</sphInput>
